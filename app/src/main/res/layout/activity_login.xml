<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_dull"
    android:id="@+id/consl"
    tools:context=".Login">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="196dp"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:id="@+id/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="242dp"
        android:fontFamily="@font/lato"
        android:text="Please enter your phone\nnumber to continue"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:lines="2"
        android:id="@+id/please"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please"
        android:background="@drawable/backforregister"
        app:layout_constraintVertical_bias="1.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardforphonenumberinlogin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/consbackround"
            app:cardBackgroundColor="#F4F9FE"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp"
                        android:background="#F4F9FE"
                        android:fontFamily="@font/lato"
                        android:text="Phone number"
                        android:textColor="#A8C3EC"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_marginLeft="24dp"
                        android:layout_height="match_parent"
                        android:id="@+id/ccode"
                        android:textFontWeight="400"
                        android:textColor="#A8C3EC"
                        android:text="+91"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textSize="20sp"

                        />

                    <EditText
                        android:id="@+id/Phonenumberl"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:autoSizeTextType="uniform"
                        android:background="#F4F9FE"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                         />



                </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:background="#F4F9FE"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center_horizontal"
                        android:background="#F4F9FE"
                        android:src="@drawable/download" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/Logininl"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/rippleforconsbackround"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="Log In"
            app:layout_constraintTop_toBottomOf="@+id/cardforphonenumberinlogin"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/Logininl"
            android:layout_marginTop="20sp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="118dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="20sp"
                android:text="Still have no accout?"
                android:gravity="end|center"
                android:fontFamily="@font/lato"
                android:textSize="12sp"
                android:textColor="#A8C3EC"
                />

            <TextView
                android:id="@+id/Loginforregister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:fontFamily="@font/lato_bold"
                android:gravity="start|center"
                android:text=" Register"
                android:textColor="#A8C3EC"
                android:textSize="14dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>