<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        app:cardBackgroundColor="#294378DB"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/cardsindown"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/snipping" />

                <TextView
                    android:id="@+id/dots"
                    android:layout_width="5dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/chango"
                    android:includeFontPadding="false"
                    android:text=":"
                    android:gravity="end"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginBottom="5dp"

                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="PAN_card"
                    android:id="@+id/detailName"
                    android:textColor="#405DB5"
                    android:textFontWeight="500"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="20 Dec 2020"
                    android:id="@+id/secondName"
                    android:textColor="#4378DB"
                    android:textFontWeight="500"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>